<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="20px"
    android:orientation="vertical">
  <TextView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="Long-press overlay to temporarily show/hide" />
  <TextView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="To enable/disable camera preview, grant/deny the camera permission (app may restart)" />
  <Button
      android:id="@+id/btn_settings_camera"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="System App Settings" />
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <CheckBox
        android:id="@+id/cb_settings_send"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:text="Send UDP" />
    <CheckBox
        android:id="@+id/cb_settings_send_tap_only"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:text="On Tap Only" />
    <Button
        android:id="@+id/btn_settings_send_info"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="?" />
    </LinearLayout>
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <EditText
        android:id="@+id/et_settings_host"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:inputType="text"
        android:hint="Host" />
    <EditText
        android:id="@+id/et_settings_port"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:inputType="number"
        android:hint="Port" />
  </LinearLayout>
  <TextView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="RotationSend (this app) more info: https://www.github.com/shadowmoon-waltz/RotationSend (this app is GPLv3 licensed)"
      android:autoLink="web" />
</LinearLayout>
